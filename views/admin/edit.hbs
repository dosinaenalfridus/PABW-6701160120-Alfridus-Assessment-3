<!-- Header and side nav -->

<div class="container">
<!--content -->
<h3>Add Informasi Beasiswa</h3>
<div class="row">
    <form action="/admin/{{story._id}}" method="POST" class="col s12">
        <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title" value="{{story.title}}">
                <label for="title">Judul</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <input type="text" id="kuota" name="kuota" value="{{story.kuota}}">
                <label for="kuota">Kuota</label>
            </div>
            <div class="input-field col s6">
                <input type="text" id="endDate" name="endDate" class="datepicker" value="{{story.endDate}}">
                <label for="endDate">Batas Pendaftaran</label>
            </div>
        </div>

        
            <div class="input-field">
                <select id="status" name="status">
                    {{#select story.status}}
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Tell Us Your Story:</h5>
                <textarea id="body" name="body">{{story.body}}</textarea>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard_admin" class="btn orange">Cancel</a>
        </div>
    </form>
</div>

