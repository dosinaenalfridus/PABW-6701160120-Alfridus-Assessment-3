<!DOCTYPE html>
<html>

<head>
  <!--Import Google Icon Font-->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <!--Import materialize.css-->
  {{!--
  <link type="text/css" rel="stylesheet" href="/materialize.min.css" media="screen,projection" /> --}}

  <!--Let browser know website is optimized for mobile-->
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

  {{!-- admin css --}}
  
  <link rel="stylesheet" href="/css/admin.css">

  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

  <title>Dosionara-Admin</title>
</head>

<body>
  <div class="navbar-fixed">
    <nav>
        <div class="nav-wrapper grey lighten-5">
          <a href="#" class="brand-logo right">dosionara</a>
        </div>
    </nav>    
  </div>
  <div class="container">
    <ul id="slide-out" class="sidenav sidenav-fixed blue-grey lighten-5">
      <li>
        <div class="user-view">
          <div class="background">
            <img src="https://hadiryuk.id/img/bg/bg-login-admin.png">
          </div>
          <a href="#user"><img class="circle" src="https://d2qp0siotla746.cloudfront.net/img/use-cases/profile-picture/template_3.jpg"></a>
          <a><span class="white-text name">ADMIN</span></a>
          <a><span class="white-text email"><small>handle with love</small></span></a>
          <a href="#"><span class="small material-icons">power_settings_new</span></a>
        </div>
      </li>
      <li><a href="/admin/"><i class="material-icons">home</i>Home</a></li>
      <li><a href="/admin/scholarship/"><i class="material-icons">school</i>Scholarship</a></li>
      <li><a href="/admin/rulesofsaw/"><i class="material-icons">tune</i>SAW Method</a></li>
    </ul>
    <div class="row">
      <h5>SAW Method/</h5>
      <div class="col s12 m10 offset-m2">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title">Table of SAW Preference</span>             
              {{#if infor}}
                <table class="striped">
                    <thead>
                        <tr>
                            <th>KODE</th>
                            <th>NRR</th>
                            <th>JPO</th>
                            <th>JTO </th>
                            <th>BOBOT</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each infor}}
                        <tr>
                            <td> {{kode}} </td>
                            <td> {{nnr}} </td>
                            <td> {{jpo}} </td>
                            <td> {{jto}} </td>
                            <td> {{bobot}} </td>                         
                            <td>
                                <a href="/admin/editSaw/{{_id}}" class="btn btn-float">
                                    <i class="small material-icons">edit</i>
                                </a>
                            </td> 
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                {{else}}
                <p>No Informasi Posted</p>
              {{/if}}
          </div>
        </div>
      </div>
      <div class="col s12 m10 offset-m2">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title">Description</span>
              <p>C1 = Nilai Rata-rata</p>
              <p>C2 = Penghasilan Orang Tua</p>
              <p>C3 = Tanggungan Orang Tua</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script>
    $(document).ready(function () {
      $('.sidenav').sidenav();
      $('.fixed-action-btn').floatingActionButton();
      $('.tooltipped').tooltip();
    })
  </script>
</body>
</html>