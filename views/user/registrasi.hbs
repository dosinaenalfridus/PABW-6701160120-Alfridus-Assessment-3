<!-- Header and side nav -->
<div class="container"> <br>
<h6><span id="span">Informasi Beasiswa/ Login </span> /Form Registrasi Beasiswa</h6> <br>
<div class="row" id="regis">
    <form action="/userbrain/registrasi" method="POST" class="col s12">
        <div class="row">
            <div class="input-field col s6">
                <input type="text" id="nama" name="nama" required="required">
                <label for="nama">Nama</label>
            </div>
            <div class="input-field col s3" required="required">
                <input type="text" id="kelas" name="kelas">
                <label for="kelas">Kelas</label>
            </div>
            <div class="input-field col s3">
                <input type="text" id="tlp" name="tlp" required="required">
                <label for="tlp">Nomor HP yang aktif</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <input type="text" id="judul" name="judul" required="required">
                <label for="judul">Nama beasiswa yang diikuti</label>
            </div>
            <div class="input-field col s3">
                <input type="text" id="nis" name="nis" required="required">
                <label for="nama">NISN</label>
            </div>
            <div class="input-field col s3">
                <input type="text" id="nilai" name="nilai" required="required">
                <label for="nilai">Nilai Rata-rata Raport</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <input type="text" id="penghasilan" name="penghasilan" required="required">
                <label for="penghasilan">Penghasilan Orang Tua</label>
            </div>
            <div class="input-field col s6">
                <input type="text" id="tanggungan" name="tanggungan"required="required">
                <label for="tanggungan">Tanggungan Orang Tua</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <input type="text" id="sekolah" name="sekolah" required="required">
                <label for="sekolah">Nama Sekolah</label>
            </div>
            <div class="input-field col s6">
                <input type="text" id="alamatsekolah" name="alamatsekolah" required="required">
                <label for="alamatsekolah">Alamat Sekolah</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <input type="text" id="alamatrumah" name="alamatrumah" required="required">
                <label for="alamatrumah">Alamat Tempat Tinggal Saat Ini</label>
            </div>
            <div class="file-field input-field col s6">
            <div class="btn">
                <span>File</span>
                <input type="file" required="required">
            </div>
            <div class="file-path-wrapper">
                <input class="file-path validate" type="text" id="scanNilai" name="scanNilai" placeholder="Upload scan nilai raport" required="required">
            </div>
            </div>
        </div>
        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/userbrain/informasi" class="btn orange">Cancel</a>
        </div>
    </form>
</div>








